<div class="grid" style="margin-left:3%" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200 }'>
  <% @pins.each do |pin| %>
    <div class="grid-item">
<br>
      <center><%= pin.name %></center>
      <center><%= image_tag(pin.photo) %></center>
      <center><%= pin.description %></center>
      <div class="panel-body"

       <center><div class="buttons" style="margin-top:10px; margin-bottom:10px">
       <center><%= link_to 'Show', pin, :class => 'btn' %></center>
       <center><div><% if user_signed_in? %>
       <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn' %>
       <% end %>
       <% if user_signed_in? %>
       <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
       <% end %></div></center>
     </div></center>
      </div>

    </div>


<% end %>
</div>
